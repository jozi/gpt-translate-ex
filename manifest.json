{
  "manifest_version": 3,
  "name": "GPT Translator",
  "version": "1.0",
  "description": "Translate selected text using ChatGPT API",
  "icons": {
    "128": "store_icon_128x128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "128": "store_icon_128x128.png"
    }
  },
  "permissions": ["activeTab", "scripting", "storage"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["content.css"]
    }
  ]
}